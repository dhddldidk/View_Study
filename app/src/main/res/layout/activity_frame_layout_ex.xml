<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FrameLayoutExActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/red"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="#FF0000"/>
        <TextView
            android:id="@+id/green"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="#00FF00"/>
        <TextView
            android:id="@+id/blue"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#0000FF"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/btnBlue"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Click Blue"
            android:onClick="blueOnClick"/>
        <Button
            android:id="@+id/btnGreen"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Click Green"
            android:onClick="greenOnClick"/>
        <Button
            android:id="@+id/btnRed"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Click Red"
            android:onClick="redOnClick"/>
         </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnAllColors"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Click All"
                android:onClick="allOnClick"/>
            <Button
                android:id="@+id/allInvisible"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="All Invisible"
                android:onClick="allInvisibleOnClick"/>
        </LinearLayout>



</LinearLayout>